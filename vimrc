syntax on

"show line numbers
" :help 'number'
set number

" number of spaces to represent a tab charecter as " :help 'tabstop'
set tabstop=4

" expand tab charecters to spaces
" :help 'expandtab'
set expandtab

" number of spaces to use on <tab>
" :help 'shiftwidth'
set shiftwidth=2

" set a color on column #n
" :help 'colorcolumn'
set colorcolumn=80

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nnoremap <leader>s :w<CR>
